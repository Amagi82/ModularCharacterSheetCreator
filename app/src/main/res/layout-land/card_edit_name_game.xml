<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="gameItemViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.edit.game.GameItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/Card.EditName"
        tools:layout_width="180dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_action_item_bounds"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/default_small_margin"
            app:imageUrl="@{gameItemViewModel.url}"
            tools:background="@color/primary"
            tools:layout_height="96dp"/>

        <ImageView
            android:id="@+id/actionBack"
            style="@style/ActionButton.Undo"/>

    </android.support.v7.widget.CardView>
</layout>