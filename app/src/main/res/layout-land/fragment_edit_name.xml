<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="nameViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.edit.name.NameViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        style="@style/EditFragmentFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextPrompt"
                android:text="@string/confirm"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/card_edit_name_game"
                         bind:gameItemViewModel="@{nameViewModel.gameItem}"/>

                <include layout="@layout/card_edit_name_axis"
                         bind:axisItemViewModel="@{nameViewModel.leftItem}"/>

                <include layout="@layout/card_edit_name_axis"
                         bind:axisItemViewModel="@{nameViewModel.rightItem}"/>

            </LinearLayout>

            <include layout="@layout/card_edit_name"
                     bind:nameItemViewModel="@{nameViewModel.nameItem}"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>