<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    style="@style/CoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CharacterFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        style="@style/AppBar.Fits">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/CollapsingToolbar">

            <include layout="@layout/profile"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/character_name_margin_bottom"
                android:layout_marginLeft="@dimen/character_name_keyline"
                android:layout_marginRight="@dimen/character_name_keyline_right">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/character_name"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:minWidth="@dimen/toolbar_edittext_minwidth"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"/>

        </android.support.design.widget.CollapsingToolbarLayout>

        <TextView
            android:id="@+id/tvGameSystem"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_tab_layout_height"
            android:background="@color/primary_dark"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/secondary_text_default_material_dark"
            android:visibility="gone"
            tools:text="Game System"
            tools:visiblity="visible"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        style="@style/RecyclerView.Card"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/Fab"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:tint="@color/primary_dark"
        app:layout_anchor="@id/collapsing_toolbar"
        app:layout_anchorGravity="bottom|end"/>

</android.support.design.widget.CoordinatorLayout>

