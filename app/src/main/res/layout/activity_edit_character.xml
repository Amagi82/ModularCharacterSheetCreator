<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    style="@style/CoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    tools:context=".EditCharacterActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        style="@style/AppBar.Fits">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/imagePortrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/character_name_keyline"
                android:layout_marginRight="@dimen/character_name_keyline_right">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/character_name"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:minWidth="@dimen/toolbar_edittext_minwidth"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"/>

        </android.support.design.widget.CollapsingToolbarLayout>

        <Button
            android:id="@+id/bGameSystem"
            style="@style/RaisedButton"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:text="Game System"/>

        <FrameLayout
            android:id="@+id/frameChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_extra_large_margin">

            <Button
                android:id="@+id/bLeft"
                style="@style/RaisedButton"
                android:visibility="gone"
                tools:text="Left"/>

            <Button
                android:id="@+id/bRight"
                style="@style/RaisedButton"
                android:layout_gravity="end"
                android:visibility="gone"
                tools:text="Right"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/imageOnyxLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:padding="@dimen/default_margin"
            android:src="@drawable/logo_onyx_path"
            android:visibility="gone"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/Fab"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:tint="@color/primary_dark"
        android:visibility="invisible"
        app:layout_anchor="@id/frameChoices"
        app:layout_anchorGravity="bottom|end"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/bAddCharacter"
        style="@style/FlatButton"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:text="Add character"
        tools:visibility="visible"/>

</android.support.design.widget.CoordinatorLayout>
