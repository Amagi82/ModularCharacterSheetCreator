<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_item_height">

    <!-- update to circle icon -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/characterIcon"
        android:layout_width="@dimen/circle_icon_size"
        android:layout_height="@dimen/circle_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_horizontal_margin"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:contentDescription="@string/character_icon"
        app:border_color="@color/grey_700"
        app:border_width="1dp"
        tools:background="@color/primary"/>

    <TextView
        android:id="@+id/tvGameSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/default_horizontal_margin"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:layout_marginTop="@dimen/default_vertical_margin"
        android:singleLine="true"
        android:textStyle="bold"
        tools:text="Game system"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_horizontal_margin"
        android:layout_marginLeft="@dimen/text_indent_margin"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:layout_marginStart="@dimen/text_indent_margin"
        android:layout_toLeftOf="@id/tvGameSystem"
        android:layout_toStartOf="@id/tvGameSystem"
        android:maxLines="2"
        android:textSize="16sp"
        tools:text="Character name"/>

    <TextView
        android:id="@+id/tvCharacterClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_vertical_margin"
        android:layout_marginLeft="@dimen/default_horizontal_margin"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:singleLine="true"
        android:textStyle="italic"
        tools:text="Dwarven cleric"/>

    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>