<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="textViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.sheet.modules.TextViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/Card.Medium">

        <LinearLayout
            style="@style/LinearLayoutCard">

            <TextView
                style="@style/TextTitle.Padded"
                android:text="@{textViewModel.title}"
                tools:text="Title"/>

            <TextView
                style="@style/TextBody.Padded"
                android:text="@{textViewModel.textBody}"
                tools:text="Description"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>