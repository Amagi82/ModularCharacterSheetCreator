<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="nameViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.edit.name.NameViewModel"/>
    </data>

    <FrameLayout
        style="@style/EditFragmentFrame">

        <TextView
            style="@style/TextPrompt"
            android:text="@string/choose_game"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            style="@style/RecyclerView.Card"
            android:paddingTop="@dimen/default_large_margin"
            app:items="@{nameViewModel.list}"
            app:itemViewBinder="@{nameViewModel.itemViewBinder}"/>
    </FrameLayout>
</layout>