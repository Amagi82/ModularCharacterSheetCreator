<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="gameItemViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.edit.game.GameItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/actionBack"
                style="@style/ActionButton"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_undo_24dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/default_small_margin"
                app:imageUrl="@{gameItemViewModel.url}"
                tools:layout_height="96dp"
                tools:background="@color/primary"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>