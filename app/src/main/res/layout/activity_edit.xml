<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="amagi82.modularcharactersheetcreator.ui.edit.EditViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        style="@style/CoordinatorLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/primary_background"
        tools:context=".EditActivity">

        <android.support.design.widget.AppBarLayout
            style="@style/AppBar.Fits">

            <android.support.design.widget.CollapsingToolbarLayout
                style="@style/CollapsingToolbar"
                android:layout_height="wrap_content"
                app:contentScrim="@color/primary"
                app:layout_scrollFlags="scroll"
                app:titleEnabled="false">

                <amagi82.modularcharactersheetcreator.ui.xtras.widgets.ImageBackdrop
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:imageUrl="@{viewModel.splashUrl}"
                    app:layout_collapseMode="parallax"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <amagi82.modularcharactersheetcreator.ui.xtras.widgets.NoSwipeViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="@dimen/character_grid_overlay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>