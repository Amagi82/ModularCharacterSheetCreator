<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_character">

    <ImageView
        android:id="@+id/imagePortrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"/>

    <ImageView
        android:id="@+id/iconLeft"
        style="@style/CircleIcon"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        tools:src="@drawable/clan_icon"/>

    <TextView
        android:id="@+id/tvIconLeft"
        style="@style/CircleIconCaption.Small"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        tools:text="Left"/>

    <ImageView
        android:id="@+id/iconRight"
        style="@style/CircleIcon"
        android:layout_gravity="right"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        tools:src="@drawable/clan_icon"/>

    <TextView
        android:id="@+id/tvIconRight"
        style="@style/CircleIconCaption.Small"
        android:layout_gravity="right"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        tools:text="Right"/>

    <View
        android:id="@+id/scrim_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_text_scrim_height_top"
        android:background="@drawable/scrim_top"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:layout_collapseMode="pin"/>

    <View
        android:id="@+id/scrim_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_text_scrim_height_bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/scrim_bottom"
        android:visibility="gone"/>
</merge>