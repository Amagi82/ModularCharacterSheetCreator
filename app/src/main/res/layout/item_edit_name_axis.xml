<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="axisItemViewModel"
                  type="amagi82.modularcharactersheetcreator.ui.edit.axis.AxisItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/Card"
        tools:layout_width="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:gravity="center_horizontal"
                android:text="@{axisItemViewModel.axisTitle}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Clan"/>

            <ImageView
                android:layout_width="@dimen/character_circle_icon_size"
                android:layout_height="@dimen/character_circle_icon_size"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_small_margin"
                app:imageUrl="@{axisItemViewModel.url}"
                tools:src="@drawable/clan_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_small_margin"
                android:gravity="center_horizontal"
                android:text="@{axisItemViewModel.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="Gangrel"/>

            <ImageView
                android:id="@+id/actionBack"
                style="@style/ActionButton"
                android:src="@drawable/ic_undo_24dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>