<resources>
    <declare-styleable name="StatRatingBar">
        <attr name="colorOutlineOn" format="color" />
        <attr name="colorOutlineOff" format="color" />
        <attr name="colorOutlinePressed" format="color" />
        <attr name="colorFill" format="color" />
        <attr name="colorFillPressed" format="color" />
        <attr name="vertical" format="boolean" />
        <attr name="barType" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
            <enum name="healthbox" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedRatingBar">
        <attr name="colorBackground" format="color" />
        <attr name="colorFill" format="color" />
        <attr name="colorFillSecondary" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="ratingMin" format="float" />
        <attr name="ratingBase" format="float" />
        <attr name="padding" format="float" />
        <attr name="cornerRadius" format="float" />
        <attr name="title" format="string" />
        <attr name="specialty" format="string" />
    </declare-styleable>
</resources>
