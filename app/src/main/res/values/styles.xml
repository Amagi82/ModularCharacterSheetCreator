<resources>

    <style name="ToolBar" parent="ToolBar_Base"/>

    <style name="ToolBar_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!--Sections below used in NewCharacterFragment -->
    <style name="IconNewCharacter" parent="IconNewCharacter_Base"/>

    <style name="IconNewCharacter_Base">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="EditTextNewCharacter" parent="EditTextNewCharacter_Base"/>

    <style name="EditTextNewCharacter_Base">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:paddingBottom">@dimen/default_vertical_margin</item>
        <item name="android:paddingTop">@dimen/default_vertical_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Sections below used for Cards -->
    <style name="Card">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextHeader" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_large_margin</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/default_large_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle_Padded" parent="TextTitle">
        <item name="android:paddingTop">@dimen/default_large_margin</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
    </style>

    <style name="TextBody" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextBody_Column" parent="TextBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextCaption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextCaption_Column" parent="TextCaption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">@dimen/default_small_margin</item>
        <item name="android:paddingRight">@dimen/default_small_margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextBody_Padded" parent="TextBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/default_large_margin</item>
    </style>

    <style name="LinearLayoutWodRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
    </style>

    <style name="StatRatingBar_Column" parent="StatRatingBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="StatRatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:isIndicator">true</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
    </style>

    <style name="LinearLayoutWodCardBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/default_large_margin</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/default_vertical_margin</item>
    </style>

    <style name="StatRatingBarTen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:numStars">10</item>
        <item name="android:paddingBottom">@dimen/default_vertical_margin</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_icon_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_small_margin</item>
        <item name="android:layout_marginRight">@dimen/default_small_margin</item>
        <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
