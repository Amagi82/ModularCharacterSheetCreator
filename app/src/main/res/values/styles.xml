<resources>

    <style name="ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="icon_new_character_left" parent="icon_new_character_left_base">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="icon_new_character_left_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="et_new_character" parent="et_new_character_base">
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="et_new_character_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/default_vertical_margin</item>
        <item name="android:paddingTop">@dimen/default_vertical_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
