<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Card">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle.Padded">
        <item name="android:paddingTop">@dimen/default_large_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextBody.Padded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_large_margin</item>
    </style>

    <style name="StatRatingBarTen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:numStars">10</item>
    </style>

    <style name="LinearLayoutWodCardBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_small_margin</item>
        <item name="android:paddingRight">@dimen/default_small_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
    </style>

    <style name="CircleIcon_CharacterFragment">
        <item name="android:layout_width">@dimen/character_choice_icon_size</item>
        <item name="android:layout_height">@dimen/character_choice_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/character_icon_keyline</item>
        <item name="android:layout_marginRight">@dimen/character_icon_keyline_right</item>
        <item name="android:layout_marginTop">?actionBarSize</item>
    </style>

    <style name="CircleIcon_Small">
        <item name="android:layout_marginTop">@dimen/sheet_icon_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/default_small_margin</item>
        <item name="android:layout_marginRight">@dimen/default_small_margin</item>
        <item name="android:layout_width">@dimen/character_choice_icon_size_small</item>
        <item name="android:layout_height">@dimen/character_choice_icon_size_small</item>
    </style>

    <style name="CircleIconCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/character_choice_caption_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">?actionBarSize</item>
        <item name="android:paddingTop">@dimen/character_choice_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/character_icon_text_keyline</item>
        <item name="android:layout_marginRight">@dimen/character_icon_text_keyline_right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CircleIconCaption.Small">
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginTop">@dimen/sheet_text_margin_top</item>
        <item name="android:layout_width">@dimen/character_choice_caption_size_small</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>


    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="CharacterItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="CharacterItemText.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HealthModuleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/statBar</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="HealthModuleIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_icon_padding</item>
        <item name="android:layout_margin">@dimen/default_small_margin</item>
        <item name="android:layout_below">@id/tvDamageLevel</item>
    </style>

</resources>
