<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Card">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Card.White">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="Card.Medium">
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="Card.Dark">
        <item name="cardBackgroundColor">@color/card_header_background</item>
    </style>

    <style name="Card.White.EditName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/edit_name_card_height</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitle.Padded">
        <item name="android:paddingTop">@dimen/default_large_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextBody.Padded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_large_margin</item>
    </style>

    <style name="StatRatingBarTen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:numStars">10</item>
    </style>

    <style name="LinearLayoutCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_small_margin</item>
        <item name="android:paddingRight">@dimen/default_small_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
    </style>

    <style name="CircleIcon">
        <item name="android:layout_marginBottom">@dimen/sheet_icon_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/sheet_icon_margin_side</item>
        <item name="android:layout_marginRight">@dimen/sheet_icon_margin_side</item>
        <item name="android:layout_width">@dimen/sheet_icon_size</item>
        <item name="android:layout_height">@dimen/sheet_icon_size</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.2</item>
    </style>

    <style name="CircleIconCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/sheet_icon_caption_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/sheet_icon_caption_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/sheet_icon_caption_margin_side</item>
        <item name="android:layout_marginRight">@dimen/sheet_icon_caption_margin_side</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:clickable">true</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.2</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">@dimen/fab_border_width</item>
    </style>

    <style name="Fab.Bottom">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="backgroundTint">@color/accent_dark</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RecyclerView.Card">
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
    </style>

    <style name="CharacterItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="CharacterItemText.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HealthModuleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="HealthModuleIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_icon_padding</item>
        <item name="android:layout_margin">@dimen/default_small_margin</item>
        <item name="android:layout_below">@id/tvDamageLevel</item>
    </style>

    <style name="CoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppBar.Fits">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/primary</item>
        <item name="layout_scrollFlags">scroll</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_small_margin</item>
        <item name="android:layout_marginRight">@dimen/default_small_margin</item>
        <item name="android:layout_marginTop">@dimen/default_tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_tiny_margin</item>
    </style>

    <style name="TextPrompt" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:shadowColor">@color/primary_dark</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="EditFragmentFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/edit_recyclerview_keyline</item>
        <item name="android:paddingRight">@dimen/edit_recyclerview_keyline</item>
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_small_margin</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ActionButton.Undo">
        <item name="android:tint">@color/primary_dark</item>
        <item name="android:src">@drawable/ic_undo_24dp</item>
    </style>

    <style name="ScrimBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sheet_text_scrim_height_bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/scrim_bottom</item>
    </style>

    <style name="ScrimTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sheet_text_scrim_height_top</item>
        <item name="android:background">@drawable/scrim_top</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ImageBackdrop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="ViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Sheet">
        <item name="android:textSize">@dimen/sheet_expanded_title_text_size</item>
    </style>

</resources>
